<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/fragmento_lista_personajes"
        class="co.edu.uniquindio.android.electiva.proyectosara.fragments.ListaDeMonitoresFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30" />
    <fragment
        android:id="@+id/fragmento_detalle_personaje"
        class="co.edu.uniquindio.android.electiva.proyectosara.activity.MonitorViewPagerActivity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:layout_margin="5dp"/>
</LinearLayout>