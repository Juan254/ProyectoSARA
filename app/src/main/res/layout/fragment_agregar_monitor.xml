<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="co.edu.uniquindio.android.electiva.proyectosara.fragments.AgregarMonitorFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imagen"
                android:src="@drawable/user_icon"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/descripcion_camera"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginTop="70dp"
                android:layout_marginRight="45dp"
                android:contentDescription="@string/descripcion_camera"
                android:background="@mipmap/ic_camera_alt_black_48dp"
                android:id="@+id/camera_button"/>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/editTextCedula"
                    android:layout_width="360dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="@string/cedula_monitor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/editTextNombreMonitor"
                    android:layout_width="360dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:hint="@string/nombre_monitor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/editTextNombreUsuario"
                    android:layout_width="360dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:hint="@string/nombre_usuario_monitor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/editTextContrasenia"
                    android:layout_width="360dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="@string/ContraseÃ±a" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/editTextTelefono"
                    android:layout_width="360dp"
                    android:layout_gravity="center_horizontal"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:hint="@string/telefono_monitor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="450dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/editTextSemestre"
                    android:layout_width="360dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="@string/semestre_monitor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/editTextLineaMonitoria"
                    android:layout_width="360dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:hint="@string/ordenar_por_linea_monitoria" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="550dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/editTextLugarAtencion"
                    android:layout_width="360dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:hint="@string/lugar_atencion" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnHoraAtencion"
                android:layout_gravity="center_horizontal"
                android:text="@string/hora_atencion"
                android:layout_marginTop="600dp"/>

            <Button
                android:layout_width="360dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:id="@+id/btnAgregarMonitor"
                android:text="@string/crear_Monitor"
                android:layout_marginTop="650dp"
                android:textColor="@color/cardview_light_background"
                android:background="@color/colorU" />


        </FrameLayout>

    </ScrollView>

</FrameLayout>
