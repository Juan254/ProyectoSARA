<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="6dp"
    card_view:cardBackgroundColor="#dae2e5"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        >

        <ImageView
            android:id="@+id/fotoMonitor"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="#00FF00"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="Imageview que representa la foto del monitor"/>

        <TextView
            android:id="@+id/nombreMonitor"
            android:text="@string/nombre_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/fotoMonitor"
            android:textSize="@dimen/lista_texto_titulo" />

        <TextView
            android:id="@+id/lineaMonitoria"
            android:text="@string/monitoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreMonitor"
            android:layout_toEndOf="@+id/fotoMonitor"
            android:textSize="@dimen/lista_texto_lineaMonitoria"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>